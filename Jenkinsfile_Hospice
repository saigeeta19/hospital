pipeline {
    agent any

    stages {
        stage('Preparation') {
            steps {
                script {
                    echo "This pipeline is used to checkout the Git repository and make reigate-hospice as an artifact"
                }
            }
        }

        stage('Build') {
    steps {
        // Clean workspace before checking out the Git repository (optional)
        cleanWs()

        // Checkout the Git repository
        checkout([
            $class: 'GitSCM',
            branches: [[name: 'master']], // Change 'master' to your desired branch
            userRemoteConfigs: [[
                url: 'https://github.com/saigeeta19/hospital.git', // Replace with your Git repository URL
                credentialsId: 'hospice_repo_login' // Optionally, provide Jenkins credentials for authentication
            ]]
        ])
    }
}

        stage('Artifact') {
            steps {
                // Create a zip file containing the contents of the workspace
                sh 'zip -r reigate-hospice.zip *'

                // Archive the zip file as an artifact
                archiveArtifacts artifacts: 'reigate-hospice.zip', allowEmptyArchive: true
            }
        }
    }
}
